<%- layout('layouts/boilerplate') %>

<div class="row justify-content-center" >
    <!-- article -->
    <div class="col-8">
        <div id="map" style="width: 100%; height: 300px; margin-bottom: 30px"></div>
        <div class="card text-center">
            <div id="carousel" class="carousel slide">
                <% if (snap.images.length > 1) { %>
                <div class="carousel-indicators">
                    <% for (let i = 0; i < snap.images.length; i++) { %>
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to=<%=i%> class=<%= i===0 ? "active": "" %> aria-current="true" aria-label="Slide <%=i+1%>"></button>
                    <% } %>
                </div>
                <% } %>
                <div class="carousel-inner">
                    <% snap.images.forEach((image, i) => { %>
                    <div class="carousel-item  <%= i === 0 ? 'active' : '' %>">
                        <img class="card-img-top" src="<%=image.url%>" alt="<%=snap.description%>">    
                    </div>
                    <% }) %>

                </div>
                <% if (snap.images.length > 1) { %>
                <button class="carousel-control-prev" type="button" data-bs-target="#carousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
                <% } %>
            </div>
            <!-- <% for (let url of snap.images) { %>
                <img src="<%=url%>" class="card-img-top" alt="<%=snap.description%>">    
            <% } %> -->
            <div class="card-body">
                <h5 class="card-title"><%= snap.title%></h5>
                <p class="card-text mb-1 text-muted border-bottom">Location: <span class="fs-5 text-black"><%=snap.location%></span></p>
                <p class="card-text mb-1 text-muted border-bottom">Author: <span class="fs-5 text-black"><b><%=snap.author.username%></b></span></p>
                <p class="card-text mb-1 text-muted border-bottom">Shooting Date: <span class="fs-5 text-black"><%=snap.shootingDate%></span></p>
                <p class="card-text mb-1 text-muted ">Comment: <span><%=snap.description%></span></p>
                
                <div class="">
                    <% if (currentUser && snap.author._id.equals(currentUser._id)) { %>
                    <a href="/snaps/<%=snap._id%>/edit" class="card-link btn btn-primary mx-auto d-block w-25 my-3">Edit</a>
                    <form action="/snaps/<%=snap._id%>?_method=DELETE" method="POST">
                        <button type="submit" class="btn btn-danger mb-3 mx-auto d-block w-25 ">Delete</button>
                    </form>
                    <% } %>
                </div>
            </div>
        </div>
        <a href="/snaps" class="my-3 btn btn-secondary mx-auto d-block w-25 ">All Snaps</a>
    </div>

    <!-- review -->
    <div class="col-4">
        <% if (currentUser) { %>
        <h3 class="text-center text-sm mt-3">Leave a Review</h3>
        <form action="/snaps/<%=snap._id%>/reviews" method="POST" class="card mb-3 needs-validation" novalidate>
            
            <fieldset class="starability-fade mx-auto mt-4">
                <!-- <legend>First rating:</legend> -->
                <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked aria-label="No rating." />
                <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                <label for="first-rate1" title="Terrible">1 star</label>
                <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                <label for="first-rate2" title="Not good">2 stars</label>
                <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                <label for="first-rate3" title="Average">3 stars</label>
                 <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                <label for="first-rate4" title="Very good">4 stars</label>
                <input type="radio"id="first-rate5" name="review[rating]" value="5" />
                <label for="first-rate5" title="Amazing">5 stars</label>
            </fieldset>

            <div class="card-body mb-3 py-0">
                <label class="form-label" for="review">Review Text</label>
                <textarea class="form-control" name="review[body]" id="review" rows="3" required></textarea>
                <div class="invalid-feedback">
                    Please provide a valid text.
                </div>
            </div>
            <button class="btn btn-success mx-3 mb-3">Submit</button>
        </form>
        <% for (let review of snap.reviews) { %>
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">By <%=review.author.username%></h5>
                    <p class="starability-result" data-rating="<%= review.rating %>">
                        Rated: <%=review.rating%> stars
                    </p>
                    <p class="card-subtitle mb-2 text-muted"></p>
                    <p class="card-text">Review: <%= review.body %></p>
                    <% if (currentUser && review.author._id.equals(currentUser._id)) { %>
                    <form action="/snaps/<%=snap._id%>/reviews/<%=review._id%>?_method=DELETE" method="POST">
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                    <% } %>
                </div>
            </div>
        <% } %>
        <% } else { %>
            <h3 class="text-center text-sm mt-3">View or Leave a Review</h3>
            <form action="/login" method="POST"></form>
            <a href="/login/<%=snap._id%>" class="btn btn-primary">Login</a>
        <% } %>
    </div>
</div>

<%-"<script>"%>
const maptilerApiKey = '<%- process.env.MAPTILER_API_KEY %>';
const snap = <%- JSON.stringify(snap) %>;
<%-"</script>"%>

<script src="/js/showPageMap.mjs"></script>